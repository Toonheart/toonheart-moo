<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>MainMenu_Events</name>
    <events>
        <event-group description="Event group for all system actions which do not require user input." title="MainMenu_System_Events" />
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Set cursor style" type="Mouse">
                    <param id="0" name="Cursor style">1</param>
                </action>
            </actions>
        </event-block>
        <event-group description="Event group for all user mouse based actions" title="MainMenu_User_Mouse_Events" />
        <event-block>
            <conditions>
                <condition id="7" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">MainMenu_Play</param>
                </condition>
            </conditions>
            <actions>
                <action id="4" name="Set animation" type="MainMenu_Play">
                    <param id="0" name="Animation">&quot;Hover&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
            </actions>
        </event-block>
        <event-group description="Event group for all user touch based actions" title="MainMenu_User_Touch_Events" />
    </events>
</c2eventsheet>
